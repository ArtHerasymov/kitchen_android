<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF01020E">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="520dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/goBackButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/arrowbutton"
            android:onClick="goBackOnClick" />

        <Button
            android:id="@+id/lotusSoup"
            android:layout_width="350dp"
            android:layout_height="161dp"
            android:background="@drawable/csouplayout"
            android:onClick="onItemClick" />

        <Button
            android:id="@+id/noodles"
            android:layout_width="350dp"
            android:layout_height="156dp"
            android:background="@drawable/noodleslayout"
            android:onClick="onItemClick" />

        <Button
            android:id="@+id/strawberrykuchi"
            android:layout_width="352dp"
            android:layout_height="157dp"
            android:background="@drawable/strawberrylayout"
            android:onClick="onItemClick" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>